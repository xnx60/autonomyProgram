}
.cu-card {
  display: block;
  overflow: hidden;
}
.cu-card.article>.cu-item {
  padding-bottom: 30rpx;
}
.cu-card>.cu-item {
  display: block;
  overflow: hidden; 
  border-radius: 10rpx;
}
.cu-card.article>.cu-item .title {
  font-size: 33rpx;
  font-weight: 900;
  padding: 0 30rpx;
  color: #757575;
}
image{
  width: 241rpx !important;
  height: 179rpx !important;
  border-radius: 14% !important;
  overflow: hidden !important;
}
.cu-card.article>.cu-item .content {
  display: flex;
  padding: 0 30rpx;
  align-items: center;
  border-bottom: solid 1rpx #d8d0cf;
  padding-bottom: 10rpx;
}
.text-cut {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.cu-card.article>.cu-item .content>image {
  width: 240rpx;
  height: 6.4em;
  margin-right: 20rpx;
  border-radius: 6rpx;
}
image {
  max-width: 100%;
  display: inline-block;
  position: relative;
  z-index: 0;
}
.cu-card.article>.cu-item .content .desc {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.text-content {
  line-height: 1.4;
}
.cu-card.article>.cu-item .content .text-content {
  font-size: 28rpx;
  color: #888;
  height: 4.3em;
  overflow: hidden;
  margin-bottom: 10rpx;
}

